{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug softRenderer (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/softRenderer",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build"
        },
        {
            "name": "Debug softRenderer (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/softRenderer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
