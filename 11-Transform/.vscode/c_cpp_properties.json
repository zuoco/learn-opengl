{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/global",
                "${workspaceFolder}/application",
                "${workspaceFolder}/gpu",
                "${workspaceFolder}/math",
                "${workspaceFolder}/slint/include",
                "${workspaceFolder}/build"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c11",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-g"
            ],
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}