[
  {
    "label": "Configure Debug",
    "command": "cmake",
    "args": [
      "-B",
      "build",
      "-G",
      "Ninja",
      "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "-DCMAKE_CXX_COMPILER=clang++",
      "-DCMAKE_C_COMPILER=clang",
      "-DCMAKE_BUILD_TYPE=Debug",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Configure Release",
    "command": "cmake",
    "args": [
      "-B",
      "build",
      "-G",
      "Ninja",
      "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "-DCMAKE_CXX_COMPILER=clang++",
      "-DCMAKE_C_COMPILER=clang",
      "-DCMAKE_BUILD_TYPE=Release",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Build Debug",
    "command": "cmake",
    "args": ["--build", "build", "--config", "Debug", "--parallel"],
    "cwd": "${ZED_WORKTREE_ROOT}",
    "tags": ["build", "debug"],
  },
  {
    "label": "Build Release",
    "command": "cmake",
    "args": ["--build", "build", "--config", "Release", "--parallel"],
    "cwd": "${ZED_WORKTREE_ROOT}",
    "tags": ["build", "release"],
  },
  {
    "label": "Clean Build",
    "command": "cmake",
    "args": ["--build", "build", "--target", "clean"],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Rebuild Debug",
    "command": "bash",
    "args": [
      "-c",
      "cmake --build build --target clean && cmake --build build --config Debug --parallel",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Rebuild Release",
    "command": "bash",
    "args": [
      "-c",
      "cmake --build build --target clean && cmake --build build --config Release --parallel",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Full Debug Build",
    "command": "bash",
    "args": [
      "-c",
      "cmake -B build -G Ninja -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_C_COMPILER=clang -DCMAKE_BUILD_TYPE=Debug && cmake --build build --config Debug --parallel",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
  {
    "label": "Full Release Build",
    "command": "bash",
    "args": [
      "-c",
      "cmake -B build -G Ninja -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_C_COMPILER=clang -DCMAKE_BUILD_TYPE=Release && cmake --build build --config Release --parallel",
    ],
    "cwd": "${ZED_WORKTREE_ROOT}",
  },
]
