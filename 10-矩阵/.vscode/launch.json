{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug softRenderer (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/softRenderer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                { "name": "SLINT_BACKEND", "value": "x11" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Debug softRenderer (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/softRenderer",
            "args": [],
            "cwd": "${workspaceFolder}/build",
            "env": {
                "SLINT_BACKEND": "x11"
            },
            "preLaunchTask": "CMake: build"
        },
        {
            "name": "Debug testMatrix (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/testMatrix",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build"
        }
    ]
}
